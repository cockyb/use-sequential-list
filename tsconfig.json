{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
